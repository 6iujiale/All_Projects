<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_register_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add music status Listener"/>

    <Button
        android:id="@+id/btn_unregister_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove music status Listener"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_register_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add video status Listener"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_unregister_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove video status Listener"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/btn_play_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play a music"/>

    <Button
        android:id="@+id/btn_play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play a video"/>
</LinearLayout>